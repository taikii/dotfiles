[include]
	path = ~/.local.gitconfig
[alias]
	st = status
	ck = checkout
	br = branch -vv -a
	lg = log --graph --pretty=tformat:'%Cred%h%Creset %Cgreen%cd%Creset %s %C(bold blue)<%an>%Creset %C(yellow)%d%Creset' --abbrev-commit --date=iso
	lgf = log --graph --name-status --pretty=tformat:'%Cred%h%Creset %Cgreen%cd%Creset %s %C(bold blue)<%an>%Creset %C(yellow)%d%Creset%n' --abbrev-commit --date=iso
[core]
	autocrlf = false
	quotepath = false
	filemode = false
	editor = vim
[init]
	defaultBranch = main
[pull]
	ff = only
